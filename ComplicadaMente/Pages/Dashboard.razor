  }

  .dashboard-card h3 {
    color: #007acc;
    margin-bottom: 10px;
    font-size: 1.3rem;
  }

  .dashboard-card:hover h3 {
    color: white;
  }

  .dashboard-card p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  .dashboard-card:hover p {
    color: #e6f3ff;
  }

  .icon {
    font-size: 2rem;
    margin-bottom: 10px;
    display: block;
  }

  .logout-btn {
    margin-top: 30px;
    padding: 10px 20px;
    background-color: #6c757d;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s;
  }

  .logout-btn:hover {
    background-color: #545b62;
  }
</style>

